<?xml version="1.0" encoding="utf-8"?> 
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"> 
  
	<item android:id="@android:id/background"> 
	    <selector>
	        <item android:state_focused="true">
				<shape> 
					<corners android:radius="5dip" /> 
					<stroke android:width="4px" android:color="#99ffff00" />
			    	<gradient 
			        	android:startColor="#FF808080" 
			        	android:centerColor="#FF202020" 
			        	android:centerY="0.5" 
			       		android:endColor="#FF000000" 
			        	android:angle="90"
			    	/> 
		    	</shape>
	        </item>
	        <item>
				<shape> 
					<corners android:radius="5dip" /> 
					<stroke android:width="1px" android:color="#99000000" />
			    	<gradient 
			        	android:startColor="#FF808080" 
			        	android:centerColor="#FF202020" 
			        	android:centerY="0.5" 
			       		android:endColor="#FF000000" 
			        	android:angle="90"
			    	/> 
		    	</shape>	            
	        </item>
    	</selector>
	</item> 

